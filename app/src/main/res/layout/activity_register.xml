<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:transitionName="title-logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="30dp"
        android:src="@drawable/title_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edge">

        <LinearLayout
            android:transitionName="rounded-bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="50dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/register_choose_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:cardCornerRadius="300dp">

                <ImageView
                    android:id="@+id/register_profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_image" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_profile"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/register_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="John Doe"
                android:textColorHint="@color/grey"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/register_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="@string/hint_email"
                android:textColorHint="@color/grey"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/register_password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="**************"
                android:textColorHint="@color/grey"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/confirm_password"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/register_confirm_password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="**************"
                android:textColorHint="@color/grey"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/register_phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="08123456789"
                android:textColorHint="@color/grey"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/address"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/register_address_txt"
                android:layout_width="match_parent"
                android:background="@drawable/input_text"
                android:hint="@string/hint_address"
                android:textColorHint="@color/grey"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:layout_height="100dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/black"
                android:text="@string/register_button"
                android:textColor="@color/white"
                android:textFontWeight="800" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>