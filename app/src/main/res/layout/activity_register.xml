<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginVertical="30dp"
        android:src="@drawable/title_logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edge">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="50dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/register_choose_btn"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:cardCornerRadius="300dp">

                <ImageView
                    android:id="@+id/register_profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_image" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Profile Picture"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/register_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="John Doe"
                android:textColorHint="@color/grey"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColorHint="@color/grey"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/register_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="example@mail.com"
                android:textColorHint="@color/grey"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/register_password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="**************"
                android:textColorHint="@color/grey"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Confirm Password"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/register_confirm_password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="**************"
                android:textColorHint="@color/grey"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/register_phone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text"
                android:hint="08123456789"
                android:textColorHint="@color/grey"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/register_address_txt"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/input_text"
                android:gravity="top"
                android:hint="Example Street 123"
                android:textColorHint="@color/grey"
                android:inputType="text|textMultiLine"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:backgroundTint="@color/black"
                android:text="REGISTER"
                android:textColor="@color/white"
                android:textFontWeight="800" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="OR"
                    android:textColor="@color/black"
                    android:textFontWeight="800" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:orientation="vertical" />
            </LinearLayout>

            <TextView
                android:id="@+id/login_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login here"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>