<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingHorizontal="15dp"
    android:background="@color/black"
    tools:context=".ProfileFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/card_shape">
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                app:cardCornerRadius="200dp">
                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/profile_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_image" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/profile_user_name"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="800"
                        android:textSize="18dp"
                        android:text="User Name"/>
                    <ImageView
                        android:id="@+id/profile_badge"
                        android:layout_marginLeft="5dp"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        app:tint="@color/primary"
                        android:src="@drawable/ic_badge_crown"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/profile_user_points"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="_ Points"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:text="Your Latest Activity"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_donation_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/profile_adoption_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/setting_btn"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textFontWeight="600"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="SETTINGS"/>
        <Button
            android:id="@+id/logout_btn"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textFontWeight="600"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="LOGOUT"/>
        <Button
            android:id="@+id/delete_account_btn"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textFontWeight="600"
            android:textColor="@color/black"
            android:backgroundTint="@color/danger_light"
            android:text="Delete Account"/>
    </LinearLayout>
</ScrollView>
</FrameLayout>